@model EcosystemApp.Models.VMParam

@{
    ViewData["Title"] = "ModifyDescParams";
}

<h4>Editar rango de caracteres de las descripciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModifyDescParams">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="minLength" class="control-label">Min caracteres</label>
                <input asp-for="minLength" class="form-control" />
                <span asp-validation-for="minLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="maxLength" class="control-label">Máx caracteres</label>
                <input asp-for="maxLength" class="form-control" />
                <span asp-validation-for="maxLength" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<span>@ViewBag.Success</span>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
